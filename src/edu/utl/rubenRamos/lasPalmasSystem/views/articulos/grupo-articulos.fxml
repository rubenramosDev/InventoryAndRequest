<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<SplitPane fx:id="splitPaneArticulos" accessibleText="articulos" dividerPositions="0.5" minHeight="400.0"
           minWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="edu.utl.rubenRamos.lasPalmasSystem.controllers.articulo.CategoriaArticuloController">
    <items>
        <AnchorPane prefHeight="200.0" prefWidth="200.0">
            <children>
                <JFXTextField fx:id="txtNombreCategoria" focusColor="#009688" labelFloat="true" layoutX="53.0"
                              layoutY="114.0" prefHeight="44.0" prefWidth="304.0" promptText="Nombre de grupo *"
                              unFocusColor="#495260" AnchorPane.leftAnchor="53.0" AnchorPane.rightAnchor="47.0"
                              AnchorPane.topAnchor="114.0">
                    <font>
                        <Font name="Roboto Regular" size="16.0"/>
                    </font>
                </JFXTextField>
                <JFXTextField fx:id="txtForma" focusColor="#009688" labelFloat="true" layoutX="63.0" layoutY="200.0"
                              prefHeight="44.0" prefWidth="211.0" promptText="Forma *" unFocusColor="#495260"
                              AnchorPane.leftAnchor="53.0" AnchorPane.rightAnchor="57.0">
                    <font>
                        <Font name="Roboto Regular" size="16.0"/>
                    </font>
                </JFXTextField>
                <HBox alignment="CENTER" layoutX="15.0" layoutY="323.0" minHeight="44.0" minWidth="286.0" spacing="15.0"
                      AnchorPane.bottomAnchor="31.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="10.0">
                    <children>
                        <JFXButton fx:id="btnUpdate" buttonType="RAISED" prefHeight="43.0" prefWidth="94.0"
                                   styleClass="update-button" stylesheets="@../../static/css/buttons.css" text="Editar"
                                   textFill="WHITE" HBox.hgrow="ALWAYS">
                            <font>
                                <Font name="Roboto Regular" size="14.0"/>
                            </font>
                            <HBox.margin>
                                <Insets/>
                            </HBox.margin>
                        </JFXButton>
                        <JFXButton fx:id="btnCreate" buttonType="RAISED" prefHeight="43.0" prefWidth="94.0"
                                   styleClass="create-button" stylesheets="@../../static/css/buttons.css" text="Crear"
                                   textFill="WHITE" HBox.hgrow="ALWAYS">
                            <font>
                                <Font name="Roboto Regular" size="13.0"/>
                            </font>
                        </JFXButton>
                    </children>
                </HBox>
                <JFXButton fx:id="btnClean" buttonType="RAISED" layoutX="260.0" layoutY="14.0"
                           styleClass="confirm-button" stylesheets="@../../static/css/buttons.css" text="Limpiar"
                           textFill="WHITE" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
                    <font>
                        <Font name="Roboto Regular" size="13.0"/>
                    </font>
                </JFXButton>
            </children>
            <padding>
                <Insets left="10.0" right="10.0"/>
            </padding>
        </AnchorPane>
        <StackPane fx:id="stackPane">
            <children>
                <AnchorPane minHeight="400.0" minWidth="300.0">
                    <children>
                        <HBox alignment="CENTER_LEFT" layoutX="-1.0" layoutY="-2.0" prefHeight="37.0" prefWidth="290.0"
                              AnchorPane.leftAnchor="2.0" AnchorPane.rightAnchor="2.0" AnchorPane.topAnchor="2.0">
                            <children>
                                <ImageView fitHeight="25.0" fitWidth="21.0" pickOnBounds="true" preserveRatio="true"
                                           HBox.hgrow="ALWAYS">
                                    <image>
                                        <Image url="@../../static/images/search.png"/>
                                    </image>
                                </ImageView>
                                <JFXTextField fx:id="textFieldSearch" focusColor="#009688" prefHeight="26.0"
                                              prefWidth="222.0" promptText="Buscar por ID, nombre, forma"
                                              unFocusColor="#495260" HBox.hgrow="ALWAYS">
                                    <HBox.margin>
                                        <Insets left="4.0"/>
                                    </HBox.margin>
                                    <font>
                                        <Font name="Roboto Regular" size="13.0"/>
                                    </font>
                                </JFXTextField>
                            </children>
                            <padding>
                                <Insets left="5.0"/>
                            </padding>
                        </HBox>
                        <TableView fx:id="tableView" layoutX="9.0" layoutY="55.0" prefHeight="358.0" prefWidth="300.0"
                                   tableMenuButtonVisible="true" AnchorPane.bottomAnchor="0.0"
                                   AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="42.0">
                            <columns>
                                <TableColumn fx:id="tableColumId" prefWidth="75.0" text="ID"/>
                                <TableColumn fx:id="tableColumNombre" prefWidth="75.0" text="Nombre de grupo"/>
                                <TableColumn fx:id="tableColumForma" prefWidth="75.0" text="Forma"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </AnchorPane>
            </children>
        </StackPane>
    </items>
</SplitPane>
